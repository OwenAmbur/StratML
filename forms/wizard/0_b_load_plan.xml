<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<?xsltforms-options debug="no"?>
<?css-conversion no ?>
<html 
    xmlns="http://www.w3.org/1999/xhtml" xmlns:xf="http://www.w3.org/2002/xforms" 
    xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema">  
  <head>
    <xf:model>
    </xf:model>
    <link rel="stylesheet" type="text/css"  href="./position-style.css" />
    <link rel="stylesheet" type="text/css"  href="./format-style.css" />
  </head>
  
  <body>
      <main>	
	<h3>Load  from an URL</h3>
	<div class="subsection" >
	  <p>Load an existing StratML file from an URL on a public server site.</p>
	  <div class="line" >
	  <xf:input ref="instance('config')/sourcedocument" >
	   <xf:label>
	      <xf:output ref="instance('messages')/message[key/text()='server-path']/value" />
	    </xf:label>
	  </xf:input>
	  <xf:submit submission="cargadoc" >
	    <xf:label>
	      Load Document
	    </xf:label>
	  </xf:submit>
	  <!--
	  <xf:output ref="instance('config')/sourcedocument" />
	  -->

	  <!--
	    Old submission method
	    <form style='border: 0px solid gray; padding: 5px' action='/forms/walt5.pl'>
	      StratML <b>URL</b>: 
	      <input name='url' size='30'/>
	      <input  style='font-size: 80%'  type='submit' value='Import StratML From URL'/>
	    </form>
	  -->
	  </div>
	  <div class="line" />
	</div>
	<br/><br/>
	<h3>Load from file</h3>
	<div class="subsection"><p>Load a local StratML file from your computer</p>
	  <div class="line">
	    <form style='border: 0px white; padding: 5px' action='/forms/walt5.pl' method='post' enctype='multipart/form-data'>
	      Local StratML <b>File</b>: 
	    <input type='file' name='f' accept='.xml'/>
	    <b> </b>
	    <input style='font-size: 80%' type='submit' value='Import StratML From File'/>
	    </form>
	  </div>
	  </div>
      </main>
  </body>
</html>
